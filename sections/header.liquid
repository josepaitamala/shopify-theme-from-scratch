{%- comment -%}
    sections/header.liquid
    A clean eCommerce header that uses the logo from the `brand` object when available.
    Falls back to shop.logo or shop.name. Includes simple nav, search, and cart.
{%- endcomment -%}
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

<style>
:root{
    --font-sans: "Inter", ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    --accent: #0070f3;
    --muted: #6b7280;
    --bg: #ffffff;
    --header-border: #e6e6e6;
}

html, body {
    font-family: var(--font-sans);
    color: #111827;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    line-height: 1.35;
    margin: 0;
    background: var(--bg);
}

/* Header typography & subtle polish */
.site-header {
    font-feature-settings: "kern" 1, "liga" 1;
    font-variation-settings: "wght" 400;
    background: var(--bg);
    border-bottom: 1px solid var(--header-border);
}

/* Brand/title */
.site-title {
    font-weight: 700;
    font-size: 1.05rem;
    letter-spacing: -0.01em;
    color: inherit;
}

/* Nav links — cleaner, more modern look */
.main-nav a {
    font-weight: 500;
    color: #111827;
    letter-spacing: 0.01em;
    transition: color .15s ease;
}

/* Accent hover/focus */
.main-nav a:hover,
.main-nav a:focus {
    color: var(--accent);
    outline: none;
}

/* Buttons & icons */
.icon-button {
    border-radius: 6px;
    transition: background-color .12s ease, color .12s ease;
}
.icon-button:focus {
    box-shadow: 0 0 0 3px rgba(0,112,243,0.12);
    outline: none;
}

/* Cart count refinement */
.cart-count {
    font-weight: 600;
    font-size: 0.7rem;
    line-height: 1;
}

/* Accessibility helper for the search label */
.visually-hidden {
    position: absolute !important;
    height: 1px; width: 1px;
    overflow: hidden;
    clip: rect(1px, 1px, 1px, 1px);
    white-space: nowrap;
    border: 0; padding: 0; margin: -1px;
}

/* Small responsive tweaks */
@media (max-width: 800px) {
    .site-header { padding: 0.75rem 1rem; }
    .site-title { font-size: 1rem; }
}
</style>
<style>
    /* Header stylesheet (kept in same file, no inline styles) */
    .site-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #e6e6e6;
        background: #fff;
        position: relative;
        z-index: 20;
    }

    .header-left,
    .header-center,
    .header-right {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .brand-link {
        display: inline-flex;
        align-items: center;
        text-decoration: none;
        color: inherit;
    }

    .brand-logo {
        display: block;
        max-height: 48px;
        width: auto;
    }

    .site-title {
        font-weight: 700;
        font-size: 1.1rem;
        margin-left: 0.5rem;
    }

    .main-nav {
        display: flex;
        gap: 1rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .main-nav a {
        text-decoration: none;
        color: #222;
        font-weight: 500;
        padding: 0.25rem 0.4rem;
    }

    .main-nav a:hover,
    .main-nav a:focus {
        color: #0070f3;
    }

    .header-actions {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }

    .search-form input[type="search"] {
        padding: 0.4rem 0.5rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        min-width: 180px;
    }

    .icon-button {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.4rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: #222;
    }

    .cart-count {
        background: #ff4d4f;
        color: #fff;
        font-size: 0.75rem;
        padding: 0.12rem 0.4rem;
        border-radius: 999px;
        margin-left: 0.35rem;
    }

    /* Responsive */
    @media (max-width: 800px) {
        .main-nav {
            display: none;
        }

        .search-form input[type="search"] {
            display: none;
        }

        .brand-logo {
            max-height: 40px;
        }
    }
</style>

<header class="site-header" role="banner" aria-label="Site header">
    <div class="header-left">
        {%- comment -%} Prefer a logo selected in this section's settings (logo_image) if provided {%- endcomment -%}
        <a class="brand-link" href="{{ routes.root_url }}" aria-label="Home">
            {%- assign logo_used = false -%}

            {%- if section.settings.logo_image != blank -%}
                <img class="brand-logo" src="{{ section.settings.logo_image | img_url: '200x' }}" alt="{{ shop.name | escape }}">
                {%- assign logo_used = true -%}
            {%- endif -%}
            
            {%- unless logo_used -%}
                <span class="site-title">{{ shop.name }}</span>
            {%- endunless -%}
        </a>
    </div>

    <nav class="header-center" role="navigation" aria-label="Main navigation">
        {%- comment -%}
            Render a simple linklist called "main-menu" if available.
        {%- endcomment -%}
        {%- if linklists.main-menu and linklists.main-menu.links.size > 0 -%}
            <ul class="main-nav" role="menubar" aria-label="Main menu">
                {%- for link in linklists.main-menu.links -%}
                    <li role="none">
                        <a role="menuitem" href="{{ link.url | escape }}">{{ link.title }}</a>
                    </li>
                {%- endfor -%}
            </ul>
        {%- endif -%}
    </nav>

    <div class="header-right header-actions">
        <form class="search-form" action="{{ routes.search_url }}" method="get" role="search" aria-label="Site search">
            <label for="header-search" class="visually-hidden">Search</label>
            <input id="header-search" name="q" type="search" placeholder="Search products" aria-label="Search products">
        </form>

        <a class="icon-button" href="{{ routes.cart_url }}" aria-label="Cart">
            <svg width="20" height="20" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M7 4h-2l-1 2h2l3.6 7.59-1.35 2.45C8.89 16.37 9.5 17 10.28 17h7.45v-2H10.28l.93-1.7L17.6 6H7V4zM7 20a2 2 0 100 4 2 2 0 000-4zm10 0a2 2 0 100 4 2 2 0 000-4z"/>
            </svg>
            <span class="cart-count" aria-hidden="true">{{ cart.item_count }}</span>
        </a>

        <button class="icon-button" type="button" aria-label="Toggle menu" aria-controls="mobile-menu" aria-expanded="false">
            <svg width="20" height="20" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M3 6h18v2H3V6zm0 5h18v2H3v-2zm0 5h18v2H3v-2z"/>
            </svg>
        </button>
    </div>
</header>

{%- comment -%}
    Optional mobile menu placeholder — keep minimal to avoid extra styles.
{%- endcomment -%}
<nav id="mobile-menu" hidden aria-hidden="true">
    {%- if linklists.main-menu and linklists.main-menu.links.size > 0 -%}
        <ul>
            {%- for link in linklists.main-menu.links -%}
                <li><a href="{{ link.url | escape }}">{{ link.title }}</a></li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
</nav>


